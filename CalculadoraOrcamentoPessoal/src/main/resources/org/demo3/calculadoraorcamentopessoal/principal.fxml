<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="343.0" prefWidth="338.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.demo3.calculadoraorcamentopessoal.PrincipalController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" centerShape="false" text="Orçamento Pessoal" />
   <ListView fx:id="listTransacoes" prefHeight="169.0" prefWidth="298.0" />
   <VBox prefHeight="66.0" prefWidth="263.0">
      <children>
         <GridPane prefHeight="78.0" prefWidth="321.0">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="103.0" minWidth="10.0" prefWidth="88.0" />
             <ColumnConstraints hgrow="SOMETIMES" maxWidth="83.0" minWidth="9.0" prefWidth="24.0" />
               <ColumnConstraints hgrow="SOMETIMES" maxWidth="157.0" minWidth="10.0" prefWidth="155.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="128.0" text="Total Receitas :" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="131.0" text="Total Despesas :" GridPane.rowIndex="1" />
               <Label alignment="CENTER" prefHeight="17.0" prefWidth="130.0" text="Saldo :" GridPane.rowIndex="2" />
               <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="20.0" text="R$" GridPane.columnIndex="1" />
               <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="21.0" text="R$" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="21.0" text="R$" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <Label fx:id="labelTotalReceitas" prefHeight="17.0" prefWidth="150.0" GridPane.columnIndex="2" />
               <Label fx:id="labelTotalDespesas" prefHeight="17.0" prefWidth="151.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <Label fx:id="labelSaldo" prefHeight="17.0" prefWidth="151.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </children>
         </GridPane>
      </children>
   </VBox>
   <HBox alignment="CENTER_RIGHT" prefHeight="29.0" prefWidth="263.0" spacing="10.0">
      <children>
         <Button fx:id="btnNovaTransacao" onAction="#abrirNovaTransacao" mnemonicParsing="false" text="Nova Transação" />
         <Button fx:id="btnLimpar" onAction="#limparTransacoes" mnemonicParsing="false" text="Limpar" />
      </children>
   </HBox>
</VBox>
